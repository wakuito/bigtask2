<div class="container">
  <h1 class="title">投稿一覧</h1>

  <p><%= notice %></p>

  <table>
    <tr>
      <th class="content">内容</th>
    </tr>

    <% @xclones.each do |xclone| %>
      <tr>
        <td class="contents"><%= xclone.content %></td>
      </tr>

      <tr>
        <td><%= link_to "詳細を確認する", xclone_path(xclone.id) %></td>
        <td><%= link_to "投稿内容を編集する", edit_xclone_path(xclone.id), data: { turbo_method: 'get', turbo_confirm: '本当に編集していいですか？' } %></td>
        <td><%= link_to "投稿を削除する", xclone_path(xclone.id), data: { turbo_method: :delete, turbo_confirm: '本当に削除していいですか？' } %></td>
      </tr>
    <% end %>
  </table>

  <%= link_to '新しく投稿する',new_xclone_path %>
</div>